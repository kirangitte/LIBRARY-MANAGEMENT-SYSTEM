<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Books</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    <%- include("studNavBar.ejs") %>
    <div class="max-w-7xl mx-auto px-4 py-10">
        <h2 class="text-3xl font-bold text-center text-indigo-700 mb-8">All Books</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% books.forEach(book => { %>
                <div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col">
                    <img src="<%= book.image || '/images/default-book.png' %>" alt="Book Image" class="h-48 w-full object-cover">
                    <div class="p-4 flex-1 flex flex-col">
                        <h3 class="text-lg font-bold text-gray-800 mb-2"><%= book.title %></h3>
                        <p class="text-gray-600 mb-4">by <%= book.author %></p>
                        <a href="/book/<%= book.id %>" class="mt-auto inline-block bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">View</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
