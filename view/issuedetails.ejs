<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Issued Book Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet"/>
</head>
<body class="bg-gray-100 min-h-screen">
    <%- include("studNavBar.ejs") %>
    <div class="max-w-4xl mx-auto mt-10 px-4">
        <h2 class="text-2xl font-bold text-center text-indigo-700 mb-6">ðŸ“– Issued Book Details</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white rounded-lg shadow-md text-center">
                <thead class="bg-indigo-700 text-white">
                    <tr>
                        <th class="px-4 py-3">Issue ID</th>
                        <th class="px-4 py-3">Book</th>
                        <th class="px-4 py-3">Author</th>
                        <th class="px-4 py-3">Issue Date</th>
                        <th class="px-4 py-3">Return Date</th>
                        <th class="px-4 py-3">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
    <% if (issuedBooks && issuedBooks.length > 0) { %>
        <% issuedBooks.forEach((issue, index) => { %>
            <tr class="hover:bg-gray-50 transition">
                <td class="px-4 py-2"><%= index + 1 %></td>
                <td class="px-4 py-2"><%= issue.book_title %></td>
                <td class="px-4 py-2"><%= issue.book_author %></td>
                <td class="px-4 py-2"><%= issue.issue_date.toISOString().slice(0,10) %></td>
                <td class="px-4 py-2"><%= issue.return_date.toISOString().slice(0,10) %></td>
                <td class="px-4 py-2"><%= issue.status %></td>
            </tr>
        <% }) %>
    <% } else { %>
        <tr>
            <td colspan="6" class="text-center text-gray-500 py-6">No issued books found</td>
        </tr>
    <% } %>
</tbody>

            </table>
        </div>
    </div>
</body>
</html>
